// Prisma Schema - Production Configuration for Vercel + Neon
// This file contains optimized settings for serverless deployment

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

// Rest of schema remains the same as schema.prisma
