generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         Role     
  createdAt    DateTime @default(now())
}

model Student {
  id        Int      @id @default(autoincrement())
  nim       String   @unique
  name      String
  program   String
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  LECTURER
  STUDENT
}

