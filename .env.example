# ===========================================
# DATABASE (REQUIRED)
# ===========================================
# PostgreSQL connection string from Neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL="postgresql://username:password@ep-xxx.neon.tech/database?sslmode=require"

# ===========================================
# JWT SECRETS (REQUIRED)
# ===========================================
# Generate random strings (min 32 characters)
# Use: https://generate-secret.vercel.app
JWT_SECRET="your-random-jwt-secret-change-this"
AUTH_JWT_SECRET="another-random-secret-change-this"

# ===========================================
# NEXTAUTH (REQUIRED for production)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="nextauth-secret-change-this"

# ===========================================
# NEWS API (OPTIONAL)
# ===========================================
NEWS_API_KEY="your-news-api-key-from-newsapi-org"

# ===========================================
# SMTP EMAIL (OPTIONAL - for contact form)
# ===========================================
# Gmail SMTP (App Password)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
MAIL_FROM="Your Name <your_email@gmail.com>"
MAIL_TO="recipient@example.com"

# ===========================================
# SEED ADMIN (OPTIONAL - for custom admin password)
# ===========================================
SEED_ADMIN_PASSWORD="AdminPass123!"        